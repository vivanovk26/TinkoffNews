<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_error_list"
    android:layout_width="@dimen/empty_view_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_error_list_retry"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_title_spacing"
        android:gravity="center"
        tools:text="@string/articles_list_error_retry" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imv_error_list"
        android:layout_width="@dimen/empty_image"
        android:layout_height="@dimen/empty_image"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_articles_list_empty_state" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_error_list_description"
        style="@style/EmptyText.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_description_spacing"
        android:gravity="center_horizontal"
        tools:text="@string/articles_empty_state_description" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_error_list_title"
        style="@style/EmptyText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_title_spacing"
        android:gravity="center_horizontal"
        tools:text="@string/articles_empty_state_title" />
</androidx.appcompat.widget.LinearLayoutCompat>
