<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dp256"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            style="@style/ImageView"
            android:layout_width="@dimen/dp64"
            android:layout_height="@dimen/dp64"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/ic_articles_list_empty_state" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Text.Size20.Bold"
            tools:text="@string/articles_empty_state_title" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:gravity="center_horizontal"
            android:textAppearance="@style/EditText.Size16"
            tools:text="@string/articles_empty_state_description" />

    </LinearLayout>

</merge>
