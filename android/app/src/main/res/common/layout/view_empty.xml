<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/empty_view_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/empty_image"
            android:layout_height="@dimen/empty_image"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_articles_list_empty_state" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/EmptyText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/empty_title_spacing"
            android:gravity="center_horizontal"
            tools:text="@string/articles_empty_state_title" />

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/EmptyText.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/empty_description_spacing"
            android:gravity="center_horizontal"
            tools:text="@string/articles_empty_state_description" />

    </LinearLayout>

</merge>
