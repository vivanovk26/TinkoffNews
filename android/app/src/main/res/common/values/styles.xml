<resources>

    <!-- Text -->
    <style name="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Size14">
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="Text.Size16">
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="Text.Size20">
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="Text.Size20.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.Size20.PrimaryReversed">
        <item name="android:textColor">@color/text_primary_reversed</item>
    </style>

    <style name="Text.Size20.PrimaryReversed.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:background">@color/primary</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="EditText.Size16">
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="EditText.Size18">
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="EditText.Size20">
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="EditText.Size20.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ImageView">
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
