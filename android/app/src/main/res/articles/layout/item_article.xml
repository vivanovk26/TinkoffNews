<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/article_item_photo_height">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdrv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/article_item_photo_height"
            android:fitsSystemWindows="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:overlayImage="@drawable/bg_article_image_overlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/default_spacing">

            <TextView
                android:id="@+id/titleTextView"
                style="@style/ArticleItem.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/article_item_title_spacing"
                tools:text="Breaking news" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/article_item_text_padding">

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/ArticleItem.Description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="Breaking description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextView"
                style="@style/ArticleItem.Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                tools:text="9 June 2018" />

            <ImageButton
                android:id="@+id/bookmarkTextView"
                style="@style/ImageButton"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bookmark_disabled" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
